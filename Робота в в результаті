#include <stdio.h>
#include <stdlib.h>
#include <math.h>
#include <time.h>
int main()
{
    float arafD , arafV, KD=0 , SD=0 , KV , SV;
    int dim=14, i;
    float A[dim];
    printf("Введіть масив A:\n");
    for(i=0;i<dim;i++){
        printf(" A[%i] = ",i);
        scanf("%f",&A[i]);
    }

    for(i=0;i<dim;i++){
        if(A[i]>0){
            SD=SD+A[i];
            KD++;
            arafD=SD/KD;
        }
    }
    printf("Середнє арифметичне для додатніх = %2.1f\n",arafD);

    for(i=0;i<dim;i++){
        if(A[i]<0){
            SV=SV+A[i];
            KV++;
            arafV=SV/KV;
        }
    }
    printf("Середнє арифметичне для відємних = %2.1f\n",arafV);
    
    int Nneg=0,Npos=0;
    for (int i =0; i<dim; i++){
        if(A[i]<0){
            Nneg++;
        }
        if(A[i]>0){
            Npos++;
        }
    }
    //printf("Nneg = %i\n",Nneg);
    //printf("Npos = %i\n",Npos);
    if(Nneg==14){
        for (int i =0; i<dim; i++){
            A[i]=0;
        }
    }
    else if(Npos==14){
        for (int i =0; i<14; i++){
            A[i]=1;
        }
    }
    
    else {
        for (int i =0; i<14; i++){
            if(i%2!=0){
                A[i]=arafD;
            }
            if(i%2==0 && A[i]<0){
                A[i]=arafV;
            }
        }
    }
    printf("Перетворений масив A\n");
    for (int i =0; i<14; i++){
        printf("array[%i] = %.2f\n",i,A[i]);
    }
     
return 0;
}
